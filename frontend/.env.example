# Frontend Environment Configuration
# Copy this file to .env and fill in the actual values

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_AI_SERVICE_URL=http://localhost:8001
REACT_APP_WS_URL=http://localhost:3001

# Application Configuration
REACT_APP_NAME=KMRL Train Induction System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=AI-driven train scheduling and optimization system

# Features Configuration
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false

# Authentication Configuration
REACT_APP_TOKEN_STORAGE_KEY=kmrl_token
REACT_APP_REFRESH_TOKEN_KEY=kmrl_refresh_token
REACT_APP_USER_STORAGE_KEY=kmrl_user
REACT_APP_SESSION_TIMEOUT=1440

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_DELAY=1000
REACT_APP_WS_TIMEOUT=30000

# Performance Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_CACHE_TTL=300000

# UI Configuration
REACT_APP_THEME_PRIMARY_COLOR=#4F46E5
REACT_APP_THEME_SECONDARY_COLOR=#10B981
REACT_APP_DEFAULT_PAGINATION_SIZE=25
REACT_APP_MAX_PAGINATION_SIZE=100

# Monitoring & Analytics
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
REACT_APP_ENABLE_ERROR_REPORTING=true

# Maps & Location (if needed)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_DEFAULT_MAP_CENTER_LAT=9.9312
REACT_APP_DEFAULT_MAP_CENTER_LNG=76.2673

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# Notifications
REACT_APP_NOTIFICATION_DURATION=4000
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# Development Configuration
REACT_APP_DEV_TOOLS=false
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=warn
