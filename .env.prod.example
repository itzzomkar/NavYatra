# =====================================================
# KMRL Train Induction System - Production Environment
# =====================================================

# Database Configuration
POSTGRES_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_128_CHARS_MIN
DATABASE_URL=postgresql://kmrl_user:CHANGE_ME_SECURE_DB_PASSWORD_128_CHARS_MIN@postgres:5432/kmrl_train_db

# Security & Authentication
JWT_SECRET=CHANGE_ME_SUPER_SECURE_JWT_SECRET_AT_LEAST_64_CHARACTERS_FOR_PRODUCTION_USE
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY_FOR_AES256

# Application URLs (Update with your actual domain)
FRONTEND_URL=https://kmrl-train-system.com
REACT_APP_API_URL=https://api.kmrl-train-system.com
REACT_APP_AI_SERVICE_URL=https://ai.kmrl-train-system.com
REACT_APP_WS_URL=wss://api.kmrl-train-system.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/kmrl.crt
SSL_KEY_PATH=/etc/ssl/certs/kmrl.key

# Monitoring & Analytics
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_KEY_32_CHARS

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@kmrl.com
SMTP_PASS=CHANGE_ME_SMTP_APP_PASSWORD

# External API Keys (if any)
WEATHER_API_KEY=your_weather_api_key_if_used
TRAFFIC_API_KEY=your_traffic_api_key_if_used

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=kmrl-backups  # if using S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Load Balancer Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Performance Tuning
REDIS_MAX_MEMORY=512mb
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# Rate Limiting
API_RATE_LIMIT=10  # requests per second per IP
AI_RATE_LIMIT=5    # AI requests per minute per user

# Logging & Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s

# Container Resource Limits
BACKEND_CPU_LIMIT=2.0
BACKEND_MEMORY_LIMIT=1G
AI_SERVICE_CPU_LIMIT=4.0
AI_SERVICE_MEMORY_LIMIT=4G

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_MOBILE_NOTIFICATIONS=true

# Development/Debug (should be false in production)
DEBUG_MODE=false
ENABLE_CORS_ALL_ORIGINS=false
ENABLE_SQL_LOGGING=false

# Third-party Integrations
NOTIFICATION_SERVICE_URL=https://notifications.kmrl.com
ANALYTICS_SERVICE_URL=https://analytics.kmrl.com

# Container Registry (if using private registry)
DOCKER_REGISTRY=your-registry.com/kmrl
REGISTRY_USERNAME=your_registry_user
REGISTRY_PASSWORD=your_registry_password

# Timezone Configuration
TZ=Asia/Kolkata
DEFAULT_TIMEZONE=Asia/Kolkata

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_KEY_64_CHARS_MIN
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Cache Configuration
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# WebSocket Configuration
WS_CONNECTION_LIMIT=1000
WS_PING_INTERVAL=30000

# AI Service Configuration
AI_MODEL_CACHE_SIZE=2GB
AI_BATCH_SIZE=32
AI_TIMEOUT=300000  # 5 minutes

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Data Retention Policy
DATA_RETENTION_DAYS=2555  # ~7 years
LOG_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=365

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# GDPR/Privacy Configuration
PRIVACY_MODE=enabled
DATA_ANONYMIZATION=true
COOKIE_CONSENT_REQUIRED=true

# Emergency Configuration
EMERGENCY_CONTACT_EMAIL=emergency@kmrl.com
EMERGENCY_CONTACT_PHONE=+91-XXX-XXX-XXXX
INCIDENT_WEBHOOK_URL=https://alerts.kmrl.com/webhook

# Geographic Configuration
DEFAULT_LOCATION_LAT=9.9312
DEFAULT_LOCATION_LON=76.2673  # Kochi coordinates
GEOFENCE_RADIUS=50  # kilometers

# Mobile App Configuration (if applicable)
MOBILE_API_VERSION=v1
PUSH_NOTIFICATION_KEY=your_firebase_server_key
MOBILE_UPDATE_CHECK_URL=https://updates.kmrl.com/mobile

# Compliance & Audit
AUDIT_LOG_ENABLED=true
COMPLIANCE_REPORTING=true
SECURITY_SCAN_ENABLED=true

# Performance Monitoring
APM_SERVICE_NAME=kmrl-train-system
APM_ENVIRONMENT=production
APM_SERVER_URL=https://apm.kmrl.com

# =====================================================
# IMPORTANT SECURITY NOTES:
# 1. Change ALL default passwords and secrets
# 2. Use strong, unique passwords (min 32 chars)
# 3. Store sensitive values in secure key management
# 4. Regularly rotate secrets and passwords
# 5. Never commit actual secrets to version control
# 6. Use environment-specific configurations
# 7. Enable proper firewall and network security
# 8. Regularly update container images
# 9. Monitor for security vulnerabilities
# 10. Backup encryption keys securely
# =====================================================
